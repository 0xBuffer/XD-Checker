<Page x:Class="XDCheckerRecode.AboutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="AboutPage">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="System Information" 
                   FontSize="24" 
                   FontWeight="SemiBold" 
                   Foreground="White" 
                   Margin="0,0,0,20" 
                   HorizontalAlignment="Left"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding SystemInfoList}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#252526" 
                                BorderBrush="#3E3E42" 
                                BorderThickness="1" 
                                CornerRadius="4" 
                                Margin="0,0,0,10" 
                                Padding="15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="250"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding Name}" 
                                           Foreground="#AAAAAA" 
                                           FontSize="14" 
                                           FontWeight="Medium"/>
                                <TextBlock Grid.Column="1" 
                                           Text="{Binding Value}" 
                                           Foreground="White" 
                                           FontSize="14" 
                                           TextWrapping="Wrap"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
